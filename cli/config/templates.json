{
  "templates": {
    "sveltekit-shadcn-v5": {
      "name": "SvelteKit + shadcn/ui v5",
      "description": "Full-stack SvelteKit application starter template",
      "tags": [
        "sveltekit",
        "shadcn",
        "typescript",
        "drizzle",
        "tailwind",
        "postgres"
      ],
      "version": "1.0.0",
      "features": [
        "🎨 shadcn/ui components",
        "💾 A complete abstraction layer built around Drizzle ORM with Postgres",
        "🌐 Multi-language support (i18n), RTL/LTR",
        "🎭 Theme switching (light/dark)",
        "📱 Responsive design",
        "🔍 SEO optimized",
        "🍪 Cookie management",
        "🧪 Vitest testing setup",
        "📊 Prebuilt components (Application Shell, data-table, utilities and more)",
        "🔐 Type-safe APIs",
        "📝 MDsveX support",
        "⚖️ Pre-built legal and example pages",
        "🔑 Authentication layer built with better-auth"
      ],
      "packageManager": "bun",
      "exclude": [
        "node_modules",
        ".svelte-kit/**",
        ".wrangler/**",
        "dist/**",
        "build/**",
        "*.lock",
        "bun.lockb",
        "yarn.lock",
        "package-lock.json",
        ".env",
        "CONTRIBUTING.md",
        "LICENSE",
        "README.md"
      ],
      "postInstallSteps": [
        "Install dependencies with your preferred package manager",
        "Copy .env.example to .env and configure your environment",
        "Initialize your local dev database",
        "Run database migrations if needed",
        "Start the development server"
      ]
    }
  }
}
